<Window
    x:Class="FinanceCalc.Forms.DashboardWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:FinanceCalc.Forms"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="clr-namespace:FinanceCalc.ViewModels;assembly=FinanceCalc"
    xmlns:oxy="http://oxyplot.org/wpf"
    Title="MainWindow"
    Width="1200"
    Height="900"
    DataContext="{Binding DashboardWindowViewModel}"
    mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="180" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <StackPanel
            Grid.RowSpan="2"
            Grid.Column="0"
            Background="#EEE">
            <Label
                Padding="10,5,5,0"
                Content="Worth Add In Month"
                FontSize="10" />
            <TextBox
                Name="WorthAddingInMonthTextBox"
                Margin="5,5,5,10"
                Text="{Binding Path=WorthAddingInMonthText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                TextAlignment="Right"
                TextWrapping="Wrap" />
            <Label
                Padding="10,5,5,0"
                Content="Start Date"
                FontSize="10" />
            <DatePickerTextBox
                Name="StartDateTextBox"
                Margin="5,5,5,10"
                Text="{Binding Path=StartDate, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, StringFormat='yyyy-MM-dd'}"
                TextAlignment="Right"
                TextWrapping="Wrap" />
            <Label
                Padding="10,5,5,0"
                Content="End Day"
                FontSize="10" />
            <DatePickerTextBox
                Name="EndDayTextBox"
                Margin="5,5,5,10"
                Text="{Binding Path=EndDate, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, StringFormat='yyyy-MM-dd'}"
                TextAlignment="Right"
                TextWrapping="Wrap" />
            <Button
                x:Name="RecalculateButton"
                Click="RecalculateButton_Click"
                Content="Update" />
        </StackPanel>

        <StackPanel Grid.Row="0" Grid.Column="1">
            <oxy:PlotView
                x:Name="WorthPlotView"
                Height="400"
                Model="{Binding Path=WorthPlotModel}" />
        </StackPanel>

        <StackPanel Grid.Row="1" Grid.Column="1">
            <oxy:PlotView
                x:Name="WorthIncomePlotView"
                Height="400"
                Model="{Binding Path=WorthIncomePlotModel}" />
        </StackPanel>
    </Grid>
</Window>
