<Window
    x:Class="FinanceCalc.Forms.BondViewerWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converters="clr-namespace:FinanceCalc.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewModels="clr-namespace:FinanceCalc.ViewModels"
    Title="Bond Overview"
    Width="550"
    Height="640"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <Window.Resources>
        <converters:ProfitabilityToBrushConverter x:Key="ProfitabilityBrush" />
    </Window.Resources>
    <Border Style="{StaticResource CardBorderStyle}">
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <Grid Margin="0,0,0,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="0.6*" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="1*" />
                    </Grid.ColumnDefinitions>

                    <TextBox
                        Grid.Column="1"
                        Margin="0"
                        FontSize="22"
                        FontWeight="Bold"
                        Foreground="#2B3E50"
                        Style="{StaticResource ReadOnlyTextBoxStyle}"
                        Text="{Binding Name, Mode=OneWay}"
                        TextAlignment="Center" />
                    <TextBox
                        Grid.Column="2"
                        Margin="0"
                        HorizontalAlignment="Left"
                        FontSize="14"
                        FontWeight="Bold"
                        Foreground="#3B3D4B"
                        Style="{StaticResource ReadOnlyTextBoxStyle}"
                        Text="{Binding Ticker, Mode=OneWay}"
                        TextAlignment="Center" />
                </Grid>
                <UniformGrid
                    Margin="0"
                    HorizontalAlignment="Stretch"
                    Columns="2"
                    Rows="4">

                    <TextBox Style="{StaticResource FormLabelField}" Text="Nominal:" />
                    <TextBox Style="{StaticResource FormInfoField}" Text="{Binding Nominal, StringFormat={}{0:N2}, Mode=OneWay}" />

                    <TextBox Style="{StaticResource FormLabelField}" Text="Cost:" />
                    <TextBox Style="{StaticResource FormInfoField}" Text="{Binding Cost, StringFormat={}{0:N2}, Mode=OneWay}" />

                    <TextBox Style="{StaticResource FormLabelField}" Text="Capital Profitability:" />
                    <TextBox
                        Foreground="{Binding CapitalProfitability, Converter={StaticResource ProfitabilityBrush}}"
                        Style="{StaticResource FormInfoField}"
                        Text="{Binding CapitalProfitability, Mode=OneWay}" />

                    <TextBox Style="{StaticResource FormLabelField}" Text="Capital Profitability / Year:" />
                    <TextBox
                        Foreground="{Binding CapitalProfitabilityYear, Converter={StaticResource ProfitabilityBrush}}"
                        Style="{StaticResource FormInfoField}"
                        Text="{Binding CapitalProfitabilityYear, Mode=OneWay}" />

                </UniformGrid>
                <Separator Margin="0,5,0,5" Foreground="#8A8A8A" />
                <UniformGrid
                    Margin="0"
                    HorizontalAlignment="Stretch"
                    Columns="2"
                    Rows="5">

                    <TextBox Style="{StaticResource FormLabelField}" Text="Coupon:" />
                    <TextBox Style="{StaticResource FormInfoField}" Text="{Binding Coupon, StringFormat={}{0:N2}, Mode=OneWay}" />

                    <TextBox Style="{StaticResource FormLabelField}" Text="Coupons per Year:" />
                    <TextBox Style="{StaticResource FormInfoField}" Text="{Binding CouponsPerYear, Mode=OneWay}" />

                    <TextBox Style="{StaticResource FormLabelField}" Text="Coupons Period (months):" />
                    <TextBox Style="{StaticResource FormInfoField}" Text="{Binding CouponsPeriodMonths, StringFormat={}{0:F1}, Mode=OneWay}" />

                    <TextBox Style="{StaticResource FormLabelField}" Text="Coupon Profitability:" />
                    <TextBox
                        Foreground="{Binding CouponProfitability, Converter={StaticResource ProfitabilityBrush}}"
                        Style="{StaticResource FormInfoField}"
                        Text="{Binding CouponProfitability, Mode=OneWay}" />

                    <TextBox Style="{StaticResource FormLabelField}" Text="Coupon Profitability / Year:" />
                    <TextBox
                        Foreground="{Binding CouponProfitabilityYear, Converter={StaticResource ProfitabilityBrush}}"
                        Style="{StaticResource FormInfoField}"
                        Text="{Binding CouponProfitabilityYear, Mode=OneWay}" />

                </UniformGrid>
                <Separator Margin="0,5,0,5" Foreground="#8A8A8A" />
                <UniformGrid
                    Margin="0"
                    HorizontalAlignment="Stretch"
                    Columns="2"
                    Rows="3">

                    <TextBox Style="{StaticResource FormLabelField}" Text="Start Date:" />
                    <TextBox Style="{StaticResource FormInfoField}" Text="{Binding DateStart, StringFormat={}{0:yyyy-MM-dd}, Mode=OneWay}" />

                    <TextBox Style="{StaticResource FormLabelField}" Text="End Date:" />
                    <TextBox Style="{StaticResource FormInfoField}" Text="{Binding DateEnd, StringFormat={}{0:yyyy-MM-dd}, Mode=OneWay}" />

                    <TextBox Style="{StaticResource FormLabelField}" Text="Duration (years):" />
                    <TextBox Style="{StaticResource FormInfoField}" Text="{Binding DurationYears, StringFormat={}{0:F2}, Mode=OneWay}" />

                </UniformGrid>
                <Separator Margin="0,5,0,5" Foreground="#8A8A8A" />
                <UniformGrid
                    Margin="0"
                    HorizontalAlignment="Stretch"
                    Columns="2"
                    Rows="1">

                    <TextBox Style="{StaticResource FormLabelField}" Text="Total Profitability / Year:" />
                    <TextBox
                        Foreground="{Binding ProfitabilityYear, Converter={StaticResource ProfitabilityBrush}}"
                        Style="{StaticResource FormInfoField}"
                        Text="{Binding ProfitabilityYear, Mode=OneWay}" />

                </UniformGrid>
                <Separator Margin="0,5,0,20" Foreground="#8A8A8A" />
                <Button
                    Width="120"
                    Click="Close_Click"
                    Content="Close"
                    Style="{StaticResource PrimaryButtonStyle}" />
            </StackPanel>
        </ScrollViewer>
    </Border>
</Window>