<UserControl
    x:Class="FinanceCalc.Controls.BondMetricsView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:oxy="http://oxyplot.org/wpf"
    d:DesignHeight="220"
    d:DesignWidth="980"
    mc:Ignorable="d">
    <UserControl.Resources>
        <!--  Универсальный стиль: скрывает элемент если Metrics == null  -->
        <Style x:Key="MetricsVisibilityStyle" TargetType="FrameworkElement">
            <Setter Property="Visibility" Value="Visible" />
            <Style.Triggers>
                <DataTrigger Binding="{Binding Metrics}" Value="{x:Null}">
                    <Setter Property="Visibility" Value="Visible" />
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>
    <Border
        Padding="10"
        Background="White"
        BorderBrush="#CED4DA"
        BorderThickness="1"
        CornerRadius="4">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <TextBlock
                Grid.Row="0"
                Grid.ColumnSpan="4"
                Margin="0,0,0,6"
                FontSize="12"
                FontWeight="Bold"
                Text="Bond Metrics" />

            <TextBlock
                Grid.Row="1"
                Grid.ColumnSpan="4"
                HorizontalAlignment="Left"
                FontStyle="Italic"
                Foreground="#6C757D"
                Text="Нет метрик">
                <TextBlock.Style>
                    <Style TargetType="TextBlock">
                        <Setter Property="Visibility" Value="Collapsed" />
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding Metrics}" Value="{x:Null}">
                                <Setter Property="Visibility" Value="Visible" />
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </TextBlock.Style>
            </TextBlock>

            <Grid
                Grid.Row="2"
                Grid.Column="0"
                Margin="0,0,8,0"
                Style="{StaticResource MetricsVisibilityStyle}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <TextBlock
                    Grid.Column="0"
                    FontWeight="SemiBold"
                    Text="Cost Δ (%):" />
                <TextBlock
                    Grid.Column="1"
                    Margin="12,0,0,0"
                    Text="Mean:" />
                <TextBlock
                    Grid.Column="2"
                    Margin="4,0,0,0"
                    Text="{Binding Metrics.MeanCostDiffPercent, StringFormat={}{0:P2}}" />
                <TextBlock
                    Grid.Column="3"
                    Margin="12,0,0,0"
                    Text="Std:" />
                <TextBlock
                    Grid.Column="4"
                    Margin="4,0,0,0"
                    Text="{Binding Metrics.StdErrorCostDiffPercent, StringFormat={}{0:P2}}" />
            </Grid>

            <Grid
                Grid.Row="2"
                Grid.Column="1"
                Margin="0,0,8,0"
                Style="{StaticResource MetricsVisibilityStyle}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <TextBlock
                    Grid.Column="0"
                    FontWeight="SemiBold"
                    Text="Coupon Yield (years):" />
                <TextBlock
                    Grid.Column="1"
                    Margin="12,0,0,0"
                    Text="Mean:" />
                <TextBlock
                    Grid.Column="2"
                    Margin="4,0,0,0"
                    Text="{Binding Metrics.MeanCouponYieldYear, StringFormat={}{0:P2}}" />
                <TextBlock
                    Grid.Column="3"
                    Margin="12,0,0,0"
                    Text="Std:" />
                <TextBlock
                    Grid.Column="4"
                    Margin="4,0,0,0"
                    Text="{Binding Metrics.StdErrorCouponYieldYear, StringFormat={}{0:N2}}" />
            </Grid>

            <Grid
                Grid.Row="2"
                Grid.Column="2"
                Margin="0,0,8,0"
                Style="{StaticResource MetricsVisibilityStyle}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <TextBlock
                    Grid.Column="0"
                    FontWeight="SemiBold"
                    Text="Total Yield (years):" />
                <TextBlock
                    Grid.Column="1"
                    Margin="12,0,0,0"
                    Text="Mean:" />
                <TextBlock
                    Grid.Column="2"
                    Margin="4,0,0,0"
                    Text="{Binding Metrics.MeanTotalYieldYear, StringFormat={}{0:P2}}" />
                <TextBlock
                    Grid.Column="3"
                    Margin="12,0,0,0"
                    Text="Std:" />
                <TextBlock
                    Grid.Column="4"
                    Margin="4,0,0,0"
                    Text="{Binding Metrics.StdErrorTotalYieldYear, StringFormat={}{0:N2}}" />
            </Grid>

            <Grid
                Grid.Row="2"
                Grid.Column="3"
                Style="{StaticResource MetricsVisibilityStyle}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <TextBlock
                    Grid.Column="0"
                    FontWeight="SemiBold"
                    Text="Duration (years):" />
                <TextBlock
                    Grid.Column="1"
                    Margin="12,0,0,0"
                    Text="Mean:" />
                <TextBlock
                    Grid.Column="2"
                    Margin="4,0,0,0"
                    Text="{Binding Metrics.MeanDurationYears, StringFormat={}{0:N2}}" />
                <TextBlock
                    Grid.Column="3"
                    Margin="12,0,0,0"
                    Text="Std:" />
                <TextBlock
                    Grid.Column="4"
                    Margin="4,0,0,0"
                    Text="{Binding Metrics.StdErrorDurationYears, StringFormat={}{0:N2}}" />
            </Grid>

            <Border
                Grid.Row="3"
                Grid.Column="0"
                Margin="0,0,8,0"
                Padding="4"
                BorderBrush="#DEE2E6"
                BorderThickness="1"
                CornerRadius="3">
                <StackPanel>
                    <TextBlock
                        FontSize="10"
                        FontWeight="SemiBold"
                        Text="Cost Diff Distribution" />
                    <oxy:PlotView Height="250" Model="{Binding CostDiffPlotModel}" />
                </StackPanel>
            </Border>
            <Border
                Grid.Row="3"
                Grid.Column="1"
                Margin="0,0,8,0"
                Padding="4"
                BorderBrush="#DEE2E6"
                BorderThickness="1"
                CornerRadius="3">
                <StackPanel>
                    <TextBlock
                        FontSize="10"
                        FontWeight="SemiBold"
                        Text="Coupon Yield Distribution" />
                    <oxy:PlotView Height="250" Model="{Binding CouponYieldPlotModel}" />
                </StackPanel>
            </Border>
            <Border
                Grid.Row="3"
                Grid.Column="2"
                Margin="0,0,8,0"
                Padding="4"
                BorderBrush="#DEE2E6"
                BorderThickness="1"
                CornerRadius="3">
                <StackPanel>
                    <TextBlock
                        FontSize="10"
                        FontWeight="SemiBold"
                        Text="Total Yield Distribution" />
                    <oxy:PlotView Height="250" Model="{Binding TotalYieldPlotModel}" />
                </StackPanel>
            </Border>
            <Border
                Grid.Row="3"
                Grid.Column="3"
                Padding="4"
                BorderBrush="#DEE2E6"
                BorderThickness="1"
                CornerRadius="3">
                <StackPanel>
                    <TextBlock
                        FontSize="10"
                        FontWeight="SemiBold"
                        Text="Duration Distribution" />
                    <oxy:PlotView Height="250" Model="{Binding DurationPlotModel}" />
                </StackPanel>
            </Border>
        </Grid>
    </Border>
</UserControl>
